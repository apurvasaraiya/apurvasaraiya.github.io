<style>
  /* Page Header */
  .page-header {
    position: relative;
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
    overflow: hidden;
  }
  
  .page-header-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .header-blob-1 {
    width: 250px;
    height: 250px;
    top: -80px;
    left: 10%;
  }
  
  .header-blob-2 {
    width: 180px;
    height: 180px;
    bottom: -40px;
    right: 15%;
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: var(--space-md) auto 0;
  }
  
  /* Coming Soon Section */
  .coming-soon-section {
    padding-bottom: var(--space-3xl);
  }
  
  .coming-soon-wrapper {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .coming-soon-card {
    background: var(--color-bg);
    border: 3px solid var(--color-text);
    border-radius: var(--radius-lg);
    padding: var(--space-3xl);
    text-align: center;
    box-shadow: var(--shadow-cartoon-lg);
    position: relative;
    overflow: hidden;
  }
  
  .coming-soon-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-secondary), var(--color-tertiary));
  }
  
  /* Cooking Scene */
  .cooking-scene {
    position: relative;
    height: 180px;
    margin-bottom: var(--space-xl);
  }
  
  .chef-container {
    position: absolute;
    left: 25%;
    top: 20%;
    transform: translateX(-50%);
  }
  
  .chef-emoji {
    font-size: 4rem;
    display: block;
    animation: chef-bounce 2s ease-in-out infinite;
  }
  
  .chef-hat-sparkle {
    position: absolute;
    top: -10px;
    right: -10px;
    font-size: 1.5rem;
    animation: sparkle 1.5s ease-in-out infinite;
  }
  
  @keyframes chef-bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
  
  @keyframes sparkle {
    0%, 100% { opacity: 1; transform: scale(1) rotate(0deg); }
    50% { opacity: 0.5; transform: scale(1.2) rotate(15deg); }
  }
  
  .pot-container {
    position: absolute;
    right: 25%;
    bottom: 0;
    transform: translateX(50%);
  }
  
  .pot-emoji {
    font-size: 5rem;
    display: block;
    animation: pot-shake 0.5s ease-in-out infinite;
  }
  
  .pot-glow {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 20px;
    background: radial-gradient(ellipse, rgba(255, 107, 107, 0.3) 0%, transparent 70%);
    animation: glow-pulse 1s ease-in-out infinite;
  }
  
  @keyframes pot-shake {
    0%, 100% { transform: rotate(-2deg); }
    50% { transform: rotate(2deg); }
  }
  
  @keyframes glow-pulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
  
  .steam-cloud {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
  }
  
  .steam {
    font-size: 2rem;
    color: var(--color-text-muted);
    opacity: 0.4;
  }
  
  .steam-1 { animation: steam-rise 2s ease-in-out infinite; }
  .steam-2 { animation: steam-rise 2s ease-in-out infinite 0.3s; }
  .steam-3 { animation: steam-rise 2s ease-in-out infinite 0.6s; }
  
  @keyframes steam-rise {
    0%, 100% { 
      transform: translateY(0) scale(1);
      opacity: 0.4;
    }
    50% { 
      transform: translateY(-15px) scale(1.3);
      opacity: 0.2;
    }
  }
  
  .ingredients {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .ingredient {
    position: absolute;
    font-size: 1.5rem;
  }
  
  .ingredient-1 {
    left: -60px;
    animation: float-ingredient 3s ease-in-out infinite;
  }
  
  .ingredient-2 {
    left: 0;
    animation: float-ingredient 3s ease-in-out infinite 0.5s;
  }
  
  .ingredient-3 {
    left: 60px;
    animation: float-ingredient 3s ease-in-out infinite 1s;
  }
  
  @keyframes float-ingredient {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-20px) rotate(10deg); }
    75% { transform: translateY(-10px) rotate(-10deg); }
  }
  
  .coming-soon-card h2 {
    margin-bottom: var(--space-md);
    color: var(--color-accent);
  }
  
  .coming-soon-desc {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.7;
  }
  
  /* Topics Preview */
  .topics-preview {
    background: var(--color-bg-alt);
    border: 2px solid var(--color-text);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }
  
  .topics-preview h3 {
    font-size: 1rem;
    margin-bottom: var(--space-md);
    color: var(--color-text-muted);
  }
  
  .topic-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-xs);
  }
  
  .topic-tag {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    font-family: var(--font-display);
    font-size: 0.8rem;
    font-weight: 600;
    background: var(--color-secondary);
    border: 2px solid var(--color-text);
    border-radius: var(--radius-sm);
    transition: all var(--transition-bounce);
  }
  
  .topic-tag:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-cartoon);
  }
  
  /* CTA Section */
  .cta-section {
    border-top: 2px dashed var(--color-text);
    padding-top: var(--space-xl);
  }
  
  .cta-text {
    margin-bottom: var(--space-md);
    color: var(--color-text-muted);
  }
  
  .social-buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  .social-buttons .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  .social-buttons .btn svg {
    flex-shrink: 0;
  }
  
  @media (max-width: 480px) {
    .cooking-scene {
      height: 150px;
    }
    
    .chef-container {
      left: 20%;
    }
    
    .pot-container {
      right: 20%;
    }
    
    .chef-emoji {
      font-size: 3rem;
    }
    
    .pot-emoji {
      font-size: 4rem;
    }
    
    .ingredients {
      display: none;
    }
    
    .social-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .social-buttons .btn {
      width: 100%;
      max-width: 200px;
      justify-content: center;
    }
  }
</style>
