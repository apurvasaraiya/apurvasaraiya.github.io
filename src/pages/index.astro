<script>
  // Check if project cards are fully visible before allowing hover scale
  function checkCardVisibility() {
    const container = document.querySelector('.projects-scroll-container');
    const cards = document.querySelectorAll('.project-item');
    
    if (!container || !cards.length) return;
    
    const containerRect = container.getBoundingClientRect();
    const containerLeft = containerRect.left;
    const containerRight = containerRect.right;
    
    cards.forEach(card => {
      const cardRect = card.getBoundingClientRect();
      const cardLeft = cardRect.left;
      const cardRight = cardRect.right;
      const cardWidth = cardRect.width;
      
      // Calculate how much of the card is visible
      const visibleLeft = Math.max(cardLeft, containerLeft);
      const visibleRight = Math.min(cardRight, containerRight);
      const visibleWidth = Math.max(0, visibleRight - visibleLeft);
      const visibleRatio = visibleWidth / cardWidth;
      
      // Card is considered fully visible if at least 80% is visible
      // This is less strict than before to ensure all reasonably visible cards get the class
      const minVisibleRatio = 0.8;
      
      // Check if card is within container bounds (not completely outside)
      const isWithinBounds = cardRight > containerLeft && cardLeft < containerRight;
      
      const isFullyVisible = visibleRatio >= minVisibleRatio && isWithinBounds;
      
      if (isFullyVisible) {
        card.classList.add('fully-visible');
      } else {
        card.classList.remove('fully-visible');
      }
    });
  }
  
  // Handle manual scrolling and auto-resume
  const wrapper = document.querySelector('.projects-scroll-wrapper');
  const container = document.querySelector('.projects-scroll-container');
  const scrollContent = document.querySelector('.projects-grid-scroll');
  const duplicateSection = document.querySelector('.projects-duplicate');
  const scrollButtonLeft = document.querySelector('.scroll-button-left');
  const scrollButtonRight = document.querySelector('.scroll-button-right');
  if (container && scrollContent && wrapper) {
    const cards = document.querySelectorAll('.project-item');
    let manualScrollTimeout: ReturnType<typeof setTimeout> | null = null;
    let isManuallyScrolling = false;
    let lastScrollLeft = container.scrollLeft;
    let isUserScrolling = false;
    let autoScrollAnimationFrame: number | null = null;
    let autoScrollStartTime: number | null = null;
    let autoScrollSpeed = 0.5; // pixels per frame (adjust for speed)
    let isProgrammaticScroll = false;
    let lastProgrammaticScroll = -1; // Track the last programmatic scroll position
    
    // Calculate the width of one set of projects (original + duplicate)
    function getSingleSetWidth() {
      if (!scrollContent) return 0;
      return scrollContent.scrollWidth / 2;
    }
    
    // Update button visibility based on scroll position
    function updateButtonVisibility() {
      if (!container || !wrapper) return;
      const scrollLeft = container.scrollLeft;
      const scrollWidth = container.scrollWidth;
      const clientWidth = container.clientWidth;
      const singleSetWidth = getSingleSetWidth();
      
      // For infinite scroll, we check if we're at the start or end of the visible set
      const isAtStart = scrollLeft <= 1;
      const isAtEnd = scrollLeft >= singleSetWidth - clientWidth - 1;
      
      if (isAtStart) {
        wrapper.classList.add('at-start');
        wrapper.classList.remove('at-end');
      } else if (isAtEnd) {
        wrapper.classList.add('at-end');
        wrapper.classList.remove('at-start');
      } else {
        wrapper.classList.remove('at-start', 'at-end');
      }
    }
    
    // Scroll functions - simplified for reliability
    function scrollLeftFn() {
      if (!container) return;
      const scrollAmount = 320; // Scroll by one card width + gap
      
      // Pause auto-scroll when using buttons
      isManuallyScrolling = true;
      isUserScrolling = true;
      container.classList.add('manual-scrolling');
      autoScrollStartTime = null;
      
      container.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
      
      if (manualScrollTimeout) {
        clearTimeout(manualScrollTimeout);
      }
      
      manualScrollTimeout = setTimeout(() => {
        isManuallyScrolling = false;
        isUserScrolling = false;
        container.classList.remove('manual-scrolling');
        autoScrollStartTime = null;
      }, 3000);
    }
    
    function scrollRightFn() {
      if (!container) return;
      const scrollAmount = 320; // Scroll by one card width + gap
      
      // Pause auto-scroll when using buttons
      isManuallyScrolling = true;
      isUserScrolling = true;
      container.classList.add('manual-scrolling');
      autoScrollStartTime = null;
      
      container.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
      
      if (manualScrollTimeout) {
        clearTimeout(manualScrollTimeout);
      }
      
      manualScrollTimeout = setTimeout(() => {
        isManuallyScrolling = false;
        isUserScrolling = false;
        container.classList.remove('manual-scrolling');
        autoScrollStartTime = null;
      }, 3000);
    }
    
    // Add button click handlers
    if (scrollButtonLeft) {
      scrollButtonLeft.addEventListener('click', scrollLeftFn);
    }
    if (scrollButtonRight) {
      scrollButtonRight.addEventListener('click', scrollRightFn);
    }
    
    // Auto-scroll function using requestAnimationFrame
    function autoScroll(timestamp: number) {
      if (!container || !scrollContent) return;
      
      if (isManuallyScrolling || isUserScrolling) {
        autoScrollAnimationFrame = requestAnimationFrame(autoScroll);
        return;
      }
      
      if (!autoScrollStartTime) {
        autoScrollStartTime = timestamp;
      }
      
      const singleSetWidth = getSingleSetWidth();
      if (singleSetWidth === 0) {
        autoScrollAnimationFrame = requestAnimationFrame(autoScroll);
        return;
      }
      
      // Calculate target scroll position (looping)
      const maxScroll = singleSetWidth;
      let targetScroll = container.scrollLeft + autoScrollSpeed;
      
      // Loop back to start when reaching the end (with small buffer to avoid flicker)
      if (targetScroll >= maxScroll - 1) {
        targetScroll = 0;
      }
      
      // Update scroll position programmatically
      isProgrammaticScroll = true;
      lastProgrammaticScroll = targetScroll;
      container.scrollLeft = targetScroll;
      // Clear flag after scroll event has time to fire
      setTimeout(() => {
        isProgrammaticScroll = false;
      }, 10);
      
      autoScrollAnimationFrame = requestAnimationFrame(autoScroll);
    }
    
    // Detect manual scrolling
    container.addEventListener('scroll', () => {
      const currentScrollLeft = container.scrollLeft;
      
      // Update button visibility
      updateButtonVisibility();
      
      // Ignore programmatic scrolling (check if scroll position matches what we set)
      if (isProgrammaticScroll || Math.abs(currentScrollLeft - lastProgrammaticScroll) < 2) {
        lastScrollLeft = currentScrollLeft;
        if (isProgrammaticScroll) {
          lastProgrammaticScroll = currentScrollLeft;
        }
        return;
      }
      
      const scrollDelta = Math.abs(currentScrollLeft - lastScrollLeft);
      
      // Check if this is user-initiated scrolling
      if (scrollDelta > 1) {
        isUserScrolling = true;
        
        if (!isManuallyScrolling) {
          // First time manual scrolling - pause auto-scroll
          isManuallyScrolling = true;
          container.classList.add('manual-scrolling');
          autoScrollStartTime = null; // Reset animation timing
        }
        
        // Clear existing timeout
        if (manualScrollTimeout) {
          clearTimeout(manualScrollTimeout);
        }
        
        // Auto-resume after user stops scrolling
        manualScrollTimeout = setTimeout(() => {
          isManuallyScrolling = false;
          isUserScrolling = false;
          container.classList.remove('manual-scrolling');
          autoScrollStartTime = null; // Reset for smooth resume
          // Don't reset scroll position - continue from where user left off
        }, 2000); // Resume after 2 seconds of no scrolling
      }
      
      lastScrollLeft = currentScrollLeft;
    }, { passive: true });
    
    // Also detect wheel events for better responsiveness
    container.addEventListener('wheel', (e: Event) => {
      const wheelEvent = e as WheelEvent;
      // Only handle horizontal scrolling
      if (Math.abs(wheelEvent.deltaX) > Math.abs(wheelEvent.deltaY)) {
        if (!isManuallyScrolling) {
          isManuallyScrolling = true;
          isUserScrolling = true;
          container.classList.add('manual-scrolling');
          autoScrollStartTime = null;
        }
        
        if (manualScrollTimeout) {
          clearTimeout(manualScrollTimeout);
        }
        
        manualScrollTimeout = setTimeout(() => {
          isManuallyScrolling = false;
          isUserScrolling = false;
          container.classList.remove('manual-scrolling');
          autoScrollStartTime = null;
        }, 2000);
      }
    }, { passive: true });
    
    // Pause on hover
    container.addEventListener('mouseenter', () => {
      if (!isManuallyScrolling) {
        isManuallyScrolling = true;
        container.classList.add('manual-scrolling');
      }
    });
    
    container.addEventListener('mouseleave', () => {
      if (!isUserScrolling) {
        isManuallyScrolling = false;
        container.classList.remove('manual-scrolling');
        autoScrollStartTime = null;
      }
    });
    
    // Start auto-scroll
    autoScrollAnimationFrame = requestAnimationFrame(autoScroll);
    
    // Use Intersection Observer for better performance
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          checkCardVisibility();
        }
      });
    }, {
      root: container,
      threshold: [0, 0.5, 1.0]
    });
    
    cards.forEach(card => {
      observer.observe(card);
    });
    
    container.addEventListener('mouseenter', checkCardVisibility);
    container.addEventListener('mousemove', checkCardVisibility);
    window.addEventListener('resize', checkCardVisibility);
    
    // Initial check
    checkCardVisibility();
    updateButtonVisibility();
    
    // Check periodically during animation (less frequently)
    setInterval(checkCardVisibility, 200);
    setInterval(updateButtonVisibility, 100);
  }
</script>
