<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: var(--space-3xl) 0;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .hero-blob-1 {
    width: 400px;
    height: 400px;
    top: -100px;
    left: -100px;
  }
  
  .hero-blob-2 {
    width: 300px;
    height: 300px;
    bottom: -50px;
    right: 10%;
  }
  
  .hero-blob-3 {
    width: 200px;
    height: 200px;
    top: 30%;
    right: -50px;
  }
  
  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }
  
  .hero-greeting {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
  }
  
  .hero-title {
    margin-bottom: var(--space-lg);
  }
  
  .hero-name {
    display: inline-block;
    background: linear-gradient(135deg, var(--color-accent), #ff8e8e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin-bottom: var(--space-xl);
  }
  
  .highlight {
    color: var(--color-text);
    font-weight: 600;
  }
  
  .hero-cta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  /* Hero Visual */
  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .hero-avatar {
    position: relative;
    width: 280px;
    height: 280px;
  }
  
  .avatar-shape {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-secondary), var(--color-tertiary));
    border: 4px solid var(--color-text);
    border-radius: var(--radius-blob);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-cartoon-lg);
    animation: float 4s ease-in-out infinite;
  }
  
  .avatar-emoji {
    font-size: 8rem;
  }
  
  .avatar-orbit {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    animation: spin 20s linear infinite;
  }
  
  .orbit-icon {
    position: absolute;
    font-size: 2rem;
    animation: counter-spin 20s linear infinite;
  }
  
  .orbit-icon:nth-child(1) {
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .orbit-icon:nth-child(2) {
    bottom: 0;
    left: -20px;
  }
  
  .orbit-icon:nth-child(3) {
    bottom: 0;
    right: -20px;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes counter-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(-360deg); }
  }
  
  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .squiggle {
    width: 80px;
    height: 8px;
    margin: var(--space-md) auto 0;
    background: var(--color-accent);
    border-radius: 4px;
    transform: rotate(-2deg);
  }
  
  /* About Section */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }
  
  .about-text p {
    font-size: 1.125rem;
    line-height: 1.8;
  }
  
  .about-skills h3 {
    margin-bottom: var(--space-lg);
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }
  
  .skill-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-alt);
    border: 2px solid var(--color-text);
    border-radius: var(--radius-md);
    font-family: var(--font-display);
    font-weight: 600;
    transition: all var(--transition-bounce);
  }
  
  .skill-item:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-cartoon);
  }
  
  .skill-icon {
    font-size: 1.5rem;
  }
  
  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }
  
  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    max-width: 800px;
    margin: 0 auto;
  }
  
  /* Section CTA */
  .section-cta {
    text-align: center;
    margin-top: var(--space-2xl);
  }
  
  /* CTA Section */
  .cta-section {
    padding-bottom: var(--space-3xl);
  }
  
  .cta-card {
    position: relative;
    background: var(--color-bg-alt);
    border: 3px solid var(--color-text);
    border-radius: var(--radius-lg);
    padding: var(--space-3xl);
    text-align: center;
    overflow: hidden;
    box-shadow: var(--shadow-cartoon-lg);
  }
  
  .cta-blob {
    width: 200px;
    height: 200px;
    top: -80px;
    right: -60px;
  }
  
  .cta-content {
    position: relative;
  }
  
  .cta-content h2 {
    margin-bottom: var(--space-sm);
  }
  
  .cta-content p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
    margin-bottom: var(--space-lg);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--space-2xl) 0;
    }
    
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero-cta {
      justify-content: center;
    }
    
    .hero-visual {
      order: -1;
    }
    
    .hero-avatar {
      width: 200px;
      height: 200px;
    }
    
    .avatar-emoji {
      font-size: 5rem;
    }
    
    .about-content {
      grid-template-columns: 1fr;
    }
    
    .skills-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
