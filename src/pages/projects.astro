---
import Base from '../layouts/Base.astro';
import Card from '../components/Card.astro';

const projects = [
  {
    title: 'Project Alpha',
    description: 'A revolutionary application that transforms how teams collaborate on complex data workflows. Built with performance and user experience as top priorities.',
    tags: ['React', 'TypeScript', 'Node.js', 'GraphQL'],
    href: 'https://github.com',
  },
  {
    title: 'Creative Dashboard',
    description: 'Beautiful analytics dashboard with real-time updates, interactive charts, and customizable widgets. Helps businesses make data-driven decisions.',
    tags: ['Vue.js', 'D3.js', 'PostgreSQL', 'WebSocket'],
    href: 'https://github.com',
  },
  {
    title: 'Mobile Magic',
    description: 'Cross-platform mobile application featuring delightful animations, offline-first architecture, and seamless sync across devices.',
    tags: ['React Native', 'Expo', 'Redux', 'Firebase'],
    href: 'https://github.com',
  },
  {
    title: 'DevTools Extension',
    description: 'Browser extension that supercharges developer productivity with quick access to documentation, code snippets, and debugging tools.',
    tags: ['JavaScript', 'Chrome API', 'Webpack'],
    href: 'https://github.com',
  },
  {
    title: 'API Gateway',
    description: 'High-performance API gateway with built-in rate limiting, authentication, and comprehensive logging for microservices architectures.',
    tags: ['Go', 'Docker', 'Redis', 'Kubernetes'],
    href: 'https://github.com',
  },
  {
    title: 'Design System',
    description: 'Comprehensive component library with accessible, customizable UI components. Includes documentation site and Figma integration.',
    tags: ['React', 'Storybook', 'CSS', 'A11y'],
    href: 'https://github.com',
  },
];
---

<Base title="Projects - YourName" description="Explore my portfolio of projects spanning web development, mobile apps, and more.">
  <!-- Page Header -->
  <section class="page-header">
    <div class="page-header-bg">
      <div class="blob blob-1 header-blob-1"></div>
      <div class="blob blob-2 header-blob-2"></div>
    </div>
    <div class="container">
      <h1 class="animate-fade-in">Projects</h1>
      <p class="page-subtitle animate-fade-in delay-1">
        A collection of things I've built, from side projects to production applications.
        Each one taught me something new! ðŸš€
      </p>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="section projects-section">
    <div class="container">
      <div class="projects-grid">
        {projects.map((project, i) => (
          <div class={`animate-fade-in delay-${(i % 3) + 1}`}>
            <Card 
              title={project.title}
              description={project.description}
              tags={project.tags}
              href={project.href}
              variant="project"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Open Source Section -->
  <section class="section open-source">
    <div class="container">
      <div class="os-card">
        <div class="os-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <div class="os-content">
          <h2>Open Source</h2>
          <p>
            I love contributing to open source! Check out my GitHub for more projects, 
            contributions, and experiments.
          </p>
          <a href="https://github.com" target="_blank" rel="noopener" class="btn btn-primary">
            View GitHub Profile
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  /* Page Header */
  .page-header {
    position: relative;
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
    overflow: hidden;
  }
  
  .page-header-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .header-blob-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    right: 10%;
  }
  
  .header-blob-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    left: 5%;
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: var(--space-md) auto 0;
  }
  
  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
  }
  
  /* Open Source Section */
  .open-source {
    padding-bottom: var(--space-3xl);
  }
  
  .os-card {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
    background: var(--color-bg-alt);
    border: 3px solid var(--color-text);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-cartoon);
  }
  
  .os-icon {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-text);
    color: var(--color-bg);
    border-radius: 50%;
  }
  
  .os-content h2 {
    margin-bottom: var(--space-sm);
  }
  
  .os-content p {
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }
  
  @media (max-width: 768px) {
    .os-card {
      flex-direction: column;
      text-align: center;
    }
    
    .os-icon {
      width: 80px;
      height: 80px;
    }
    
    .os-icon svg {
      width: 36px;
      height: 36px;
    }
  }
</style>

