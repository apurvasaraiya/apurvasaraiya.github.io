---
const socialLinks = [
  { href: 'https://github.com/apurvasaraiya', label: 'GitHub', icon: 'github', username: 'apurvasaraiya' },
  { href: 'https://x.com/a____a07', label: 'X', icon: 'twitter', username: 'a____a07' },
  { href: 'https://www.linkedin.com/in/apurva-saraiya/', label: 'LinkedIn', icon: 'linkedin', username: 'apurva-saraiya' },
];
---

<nav class="nav">
  <div class="nav-container container">
    <a href="/" class="nav-logo">
      <span class="logo-text">
        <span class="logo-bracket logo-bracket-open">&lt;</span>
        <span class="logo-name">Apurva</span>
        <span class="logo-bracket logo-bracket-close">&gt;</span>
      </span>
    </a>
    
    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger"></span>
    </button>
    
    <div class="nav-menu">
      <div class="nav-social">
        {socialLinks.map(link => (
          <a 
            href={link.href} 
            class="social-link" 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label={link.label}
            data-username={link.username}
          >
            {link.icon === 'github' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            )}
            {link.icon === 'twitter' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
            {link.icon === 'linkedin' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            <span class="social-username">{link.username}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg);
    border-bottom: 3px solid var(--color-text);
    padding: var(--space-sm) 0;
  }
  
  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }
  
  .nav-logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    transition: transform var(--transition-bounce);
  }
  
  .nav-logo:hover {
    transform: scale(1.05) rotate(-2deg);
    color: var(--color-text);
  }
  
  .logo-text {
    display: inline-flex;
    align-items: center;
    gap: 0;
    font-family: 'Courier New', monospace;
  }
  
  .logo-bracket {
    display: inline-block;
    color: var(--color-accent);
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 1;
  }
  
  .logo-bracket-open {
    margin-right: 0.1rem;
  }
  
  .logo-bracket-close {
    margin-left: 0.1rem;
  }
  
  .logo-name {
    display: inline-block;
    background: linear-gradient(135deg, var(--color-accent), #ff8e8e);
    color: white;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    line-height: 1;
  }
  
  .nav-toggle {
    display: none;
    padding: var(--space-xs);
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .hamburger,
  .hamburger::before,
  .hamburger::after {
    display: block;
    width: 24px;
    height: 3px;
    background: var(--color-text);
    border-radius: 2px;
    transition: all var(--transition-normal);
  }
  
  .hamburger {
    position: relative;
  }
  
  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    left: 0;
  }
  
  .hamburger::before { top: -8px; }
  .hamburger::after { top: 8px; }
  
  .nav-menu {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
  }
  
  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--space-xs);
  }
  
  .nav-link {
    display: block;
    padding: var(--space-xs) var(--space-md);
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--color-text);
    border-radius: var(--radius-md);
    border: 2px solid transparent;
    transition: all var(--transition-bounce);
  }
  
  .nav-link:hover {
    background: var(--color-secondary);
    border-color: var(--color-text);
    transform: translateY(-2px);
  }
  
  .nav-link.active {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent-hover);
  }
  
  .nav-social {
    display: flex;
    gap: var(--space-xs);
  }
  
  .social-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text);
    background: var(--color-bg-alt);
    border: 2px solid var(--color-text);
    border-radius: 50%;
    transition: width 0.35s ease-out,
                border-radius 0.35s ease-out,
                background 0.25s ease,
                padding 0.35s ease-out,
                gap 0.35s ease-out;
    overflow: hidden;
    gap: 0;
    padding: 0;
  }
  
  .social-link:hover {
    background: var(--color-tertiary);
    border-radius: 20px;
    width: auto;
    min-width: 40px;
    padding: 0 var(--space-sm);
    gap: var(--space-xs);
    justify-content: flex-start;
  }
  
  .social-link svg {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    transition: transform 0.25s ease;
  }
  
  .social-link:hover svg {
    transform: scale(1.05);
  }
  
  .social-username {
    display: block;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
    opacity: 0;
    max-width: 0;
    overflow: hidden;
    transition: opacity 0.25s ease 0.15s,
                max-width 0.35s ease-out 0.1s,
                margin-left 0.25s ease 0.15s;
    margin-left: 0;
  }
  
  .social-link:hover .social-username {
    opacity: 1;
    max-width: 200px;
    margin-left: var(--space-xs);
  }
  
  /* Mobile and Tablet */
  @media (max-width: 1024px) {
    .nav-toggle {
      display: none;
    }
    
    .nav-menu {
      position: static;
      transform: none;
      width: auto;
      height: auto;
      flex-direction: row;
      justify-content: flex-end;
      gap: var(--space-xs);
      padding: 0;
      background: transparent;
      border: none;
    }
    
    .nav-social {
      display: flex;
      gap: var(--space-xs);
    }
    
    .social-link {
      transition: none !important;
      overflow: hidden !important;
      pointer-events: auto;
    }
    
    .social-link:hover {
      width: 40px !important;
      border-radius: 50% !important;
      padding: 0 !important;
      gap: 0 !important;
      justify-content: center !important;
      background: var(--color-bg-alt) !important;
    }
    
    .social-link svg {
      transition: none !important;
    }
    
    .social-link:hover svg {
      transform: none !important;
    }
    
    .social-username {
      display: none !important;
      opacity: 0 !important;
      max-width: 0 !important;
      margin-left: 0 !important;
    }
    
    .social-link:hover .social-username {
      display: none !important;
      opacity: 0 !important;
      max-width: 0 !important;
      margin-left: 0 !important;
    }
  }
  
  /* Mobile */
  @media (max-width: 768px) {
    .nav-container {
      gap: var(--space-md);
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav-toggle');
  const menu = document.querySelector('.nav-menu');
  
  // Only add toggle functionality if toggle button exists (desktop)
  if (toggle && window.innerWidth > 1024) {
    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isOpen));
      menu?.classList.toggle('open');
    });
  }
</script>
